@{
    ViewData["Title"] = "Confirmación de Pedido";
}

<div class="container text-center mt-5">
    <div class="jumbotron">
        <h1 class="display-4 text-success">¡Pedido Realizado con Éxito!</h1>
        <p class="lead">Tu compra ha sido procesada y confirmada.</p>
        <hr class="my-4">

        <div class="d-grid gap-2 d-md-flex justify-content-center mt-4">
            <a class="btn btn-primary btn-lg me-md-2" href="/Productos" role="button">
                <i class="bi bi-box-seam"></i> Explorar Productos
            </a>
            <a class="btn btn-secondary btn-lg" asp-controller="Compra" asp-action="Historial" role="button">
                <i class="bi bi-clock-history"></i> Ver Historial de Compras
            </a>
        </div>
    </div>
</div>

