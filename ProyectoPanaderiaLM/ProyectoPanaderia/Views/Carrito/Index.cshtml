@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Mi Carrito";
}
<h2 class="mb-4">Carrito de Compras</h2>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>@item.PrecioUnitario.ToString("C")</td>
                    <td>@item.Subtotal.ToString("C")</td>
                    <td>
                        <form asp-action="EliminarDelCarrito" method="post">
                            <input type="hidden" name="productoId" value="@item.ProductoId" />
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right mt-4">
        <h3>Total: @Model.Sum(item => (decimal)item.Subtotal).ToString("C")</h3>
        <a asp-action="Checkout" class="btn btn-primary btn-lg">Realizar pedido</a>
    </div>

    

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    }

}
else
{
    <div class="alert alert-info">Tu carrito está vacío.</div>
}

