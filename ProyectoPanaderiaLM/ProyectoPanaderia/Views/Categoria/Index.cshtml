@model IEnumerable<ProyectoPanaderia.Models.Categoria>
@{
    ViewData["Title"] = "Categorías";
}
<h2 class="mb-3">Categorías Registradas</h2>

<a asp-action="Crear" class="btn btn-success mb-3">Nueva Categoría</a>

<table class="table table-striped border">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@c.Id" class="btn btn-warning btn-sm me-1">Editar</a>
                    <form asp-action="Eliminar" asp-route-id="@c.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta categoría?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
