@model ProyectoPanaderia.ViewModels.ProductoVM
@{
    ViewData["Title"] = "Editar Producto";
}

<h2 class="mb-3">Editar Producto</h2>

<form asp-action="Editar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Imagen" class="form-label"></label>
        <input asp-for="Imagen" class="form-control" placeholder="img_prod/img_001.png" />
        <span asp-validation-for="Imagen" class="text-danger"></span>

        @if (!string.IsNullOrWhiteSpace(Model.Imagen))
        {
            <div class="mt-2">
                <strong>Vista previa:</strong><br />
                <img src="@Model.Imagen" alt="Vista previa" class="img-thumbnail" style="max-height: 120px;" />
            </div>
        }
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label"></label>
        <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Disponible" class="form-check-input" />
        <label asp-for="Disponible" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
